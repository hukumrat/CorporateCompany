@model List<CorporateCompany.ViewModels.ServicesListViewModel>
<div class="container">
    <div class="row mb-5">
        <div class="col-12 text-center" data-aos="fade">
            <h2 class="section-title mb-3">Hizmetler</h2>
        </div>
    </div>
    <div class="row align-items-stretch">
        @foreach (var item in @Model)
        {
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-4" data-aos="fade-up">
                <div class="unit-4">
                    <div class="unit-4-icon mr-4 text-center"><span class="text-primary flaticon-startup"></span></div>
                    <div>
                        <div class="unit-4-icon mr-4 text-center"><h3>@item.Name</h3></div>
                        <p>@item.ShortDescription</p>
                        <p><a asp-controller="Detail" asp-action="Services" asp-route-id="@item.Id" >Daha fazla...</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>