@model dynamic

@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "_Layout";
}
<div id="overlayer"></div>
<div class="loader">
    <div class="spinner-border text-primary" role="status">
        <span class="sr-only">Yükleniyor...</span>
    </div>
</div>
<div class="site-wrap">
    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close mt-3">
                <span class="js-menu-toggle"><i class="fas fa-times"></i></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>

    <header class="site-navbar py-4 js-sticky-header site-navbar-target" role="banner">

        <div class="container">
            <div class="row align-items-center">

                <div class="col-6 col-xl-2">
                    <h1 class="mb-0 site-logo"><a href="#Home" class="h2 mb-0">CorporateCompany</a></h1>
                </div>

                <div class="col-12 col-md-10 d-none d-xl-block">
                    <nav class="site-navigation position-relative text-right" role="navigation">

                        <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                            <li><a href="#Home" class="nav-link">Ana Sayfa</a></li>
                            <li class="has-children">
                                <a class="nav-link">Kurumsal</a>
                                <ul class="dropdown">
                                    <li><a href="#AboutUs" class="nav-link">Hakkımızda</a></li>
                                    <li><a href="#MissionVision" class="nav-link">Misyon & Vizyon</a></li>
                                </ul>
                            </li>
                            <li><a href="#Projects" class="nav-link">Projeler</a></li>
                            <li><a href="#Services" class="nav-link">Hizmetler</a></li>
                            <li><a href="#References" class="nav-link">Referanslar</a></li>
                            <li><a href="#Hr" class="nav-link">İnsan Kaynakları</a></li>
                            <li><a href="#Contact" class="nav-link">İletişim</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-6 d-inline-block d-xl-none ml-md-0 py-3" style="position: relative; top: 3px;"><a class="site-menu-toggle js-menu-toggle float-right"><span class="icon-menu h3"></span></a></div>
            </div>
        </div>

    </header>
    @await Component.InvokeAsync("Slider")
    <section class="site-section cta-big-image" id="AboutUs">
        @await Component.InvokeAsync("AboutUs")
    </section>
    <section class="site-section cta-big-image" id="MissionVision">
        @await Component.InvokeAsync("MissionVision")
    </section>
    <section class="site-section cta-big-image" id="Projects">
        @await Component.InvokeAsync("ProjectsList")
    </section>
    <section class="site-section cta-big-image" id="Services">
        @await Component.InvokeAsync("ServicesList")
    </section>
    <section class="site-section cta-big-image" id="References">
        @await Component.InvokeAsync("ReferencesList")
    </section>
    <section class="site-section cta-big-image" id="Hr">
        @await Component.InvokeAsync("EmploymentAdd")
    </section>
    <section class="site-section bg-light cta-big-image" id="Contact" data-aos="fade">
        @await Component.InvokeAsync("ContactUs")
    </section>
    <footer class="site-footer">
        @await Component.InvokeAsync("Footer")
    </footer>
</div>
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#fullpage').fullpage({
                autoScrolling: false,
                fitToSection: false,
                loopBottom: true,
                afterRender: function () {
                    setInterval(function () {
                        $.fn.fullpage.moveSlideRight();
                    }, 3000);
                }
            });
        });
    </script>
}
