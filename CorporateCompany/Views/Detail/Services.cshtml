@model CorporateCompany.ViewModels.ServicesListViewModel

@{
    ViewBag.Title = "Hizmet Detayı";
    Layout = "~/Views/Shared/_DetailLayout.cshtml";
}

<div class="site-wrap">
    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close mt-3">
                <span class="js-menu-toggle"><i class="fas fa-times"></i></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>

    <header class="site-navbar py-4 js-sticky-header site-navbar-target" role="banner">

        <div class="container">
            <div class="row align-items-center">

                <div class="col-6 col-xl-2">
                    <h1 class="mb-0 site-logo"><a href="#Home" class="h2 mb-0">CorporateCompany</a></h1>
                </div>

                <div class="col-12 col-md-10 d-none d-xl-block">
                    <nav class="site-navigation position-relative text-right" role="navigation">

                        <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                            <li><a href="/#Home" class="nav-link">Ana Sayfa</a></li>
                            <li class="has-children">
                                <a class="nav-link">Kurumsal</a>
                                <ul class="dropdown">
                                    <li><a href="/#AboutUs" class="nav-link">Hakkımızda</a></li>
                                    <li><a href="/#MissionVision" class="nav-link">Misyon & Vizyon</a></li>
                                </ul>
                            </li>
                            <li><a href="/#Projects" class="nav-link">Projeler</a></li>
                            <li><a href="/#Services" class="nav-link active">Hizmetler</a></li>
                            <li><a href="/#References" class="nav-link">Referanslar</a></li>
                            <li><a href="/#Hr" class="nav-link">İnsan Kaynakları</a></li>
                            <li><a href="/#Contact" class="nav-link">İletişim</a></li>
                        </ul>
                    </nav>
                </div>


                <div class="col-6 d-inline-block d-xl-none ml-md-0 py-3" style="position: relative; top: 3px;"><a class="site-menu-toggle js-menu-toggle float-right"><span class="icon-menu h3"></span></a></div>

            </div>
        </div>

    </header>
    <div class="post-parallax parallax inverse-wrapper parallax2 align-center" style="background-image: url('@Model.Photos.First().Path');">
        <div class="container inner text-center">
            <div class="headline text-center">
                <h2>Platea mattis arcu parturient dapibus nec augue.</h2>
                <p class="lead">Venenatis id sollicitudin maecenas eu platea eros finibus.</p>
            </div>
        </div>
    </div>
    <section class="site-section" id="detail">
        <div class="container">
            <div class="row mb-3">
                <div class="col-12 text-center" data-aos="fade">
                    <h2 class="section-title mb-3">Hizmet Görselleri</h2>
                </div>
            </div>

            <div id="posts" class="row no-gutter">
                @foreach (var photo in @Model.Photos)
                {
                    <div class="item web col-sm-6 col-md-4 col-lg-4 col-xl-3 mb-4">
                        <a href="@photo.Path" class="item-wrap fancybox" data-fancybox="fancy-gallery">
                            <span><i class="fas fa-search-plus"></i></span>
                            <img class="img-fluid" src="@photo.Path">
                        </a>
                    </div>
                }

            </div>
        </div>

    </section>
    <div class="container ">
        <div class="row mb-5">
            <div class="col-md-12 text-center">
                <h1>@Model.Name</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.Raw(@Model.Description)
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <a type="button" href="/#Services" class="btn btn-primary btn-rounded mt-5 mb-5"><i class="fas fa-arrow-left"></i>&nbsp; Geri dön</a>
            </div>
        </div>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mobile-text-center">
                    <div class="row">
                        <div class="col-md-4">
                            <h2 class="footer-heading mb-4">Hakkımızda</h2>
                            <p>@Model.AboutUsSummary</p>
                        </div>
                        <div class="col-md-4 ml-auto">
                            <h2 class="footer-heading mb-4">Hızlı Erişim Menüsü</h2>
                            <ul class="list-unstyled">
                                <li><a href="/#AboutUs" class="smoothscroll">Hakkımızda</a></li>
                                <li><a href="/#Services" class="smoothscroll">Hizmetler</a></li>
                                <li><a href="/#Contact" class="smoothscroll">Bize Ulaşın</a></li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h2 class="footer-heading mb-4">Bizi Takip Edin</h2>
                            @if (!string.IsNullOrEmpty(@Model.FacebookUrl))
                            {
                                <a href="@Model.FacebookUrl" class="pl-0 pr-3"><i class="fab fa-facebook-f"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(@Model.TwitterUrl))
                            {
                                <a href="@Model.TwitterUrl" class="pl-3 pr-3"><i class="fab fa-twitter"></i></a>

                            }
                            @if (!string.IsNullOrEmpty(@Model.InstagramUrl))
                            {
                                <a href="@Model.InstagramUrl" class="pl-3 pr-3"><i class="fab fa-instagram"></i></a>

                            }
                            @if (!string.IsNullOrEmpty(@Model.LinkedInUrl))
                            {
                                <a href="@Model.LinkedInUrl" class="pl-3 pr-3"><i class="fab fa-linkedin-in"></i></a>
                            }

                        </div>
                    </div>
                </div>
            </div>
            <div class="row pt-5 mt-5 text-center">
                <div class="col-md-12">
                    <div class="border-top pt-5">
                        <p>
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> | Tüm hakları sakladır | CorporateCompany
                        </p>

                    </div>
                </div>

            </div>
        </div>
    </footer>
</div>