@model CorporateCompany.Areas.Admin.ViewModels.PasswordChangeViewModel

@{
    ViewBag.Title = "Parolayı Değiştir";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .div-wrapper {
        height: 200px;
        margin-top: 40px;
        border: 2px dashed #ddd; 
        border-radius: 8px;
    }

    .div-to-align {
        width: 100%;
        padding: 40px 20px;
        /* .... */
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Change Password Page
            </header>
            <div class="panel-body">
                <form asp-controller="Account" asp-action="ChangePassword" method="post" role="form" class="form-horizontal tasi-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group has-success">
                        <label asp-for="CurrentPassword" class="col-lg-2 control-label">Current Password:</label>
                        <div class="col-lg-10">
                            <input asp-for="CurrentPassword" type="password" placeholder="Current Password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="NewPassword" class="col-lg-2 control-label">New Password:</label>
                        <div class="col-lg-10">
                            <input asp-for="NewPassword" type="password" placeholder="New Password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="ConfirmNewPassword" class="col-lg-2 control-label">Confirm New Password:</label>
                        <div class="col-lg-10">
                            <input asp-for="ConfirmNewPassword" type="password" placeholder="Confirm New Password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
