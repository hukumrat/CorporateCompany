@model CorporateCompany.Areas.Admin.ViewModels.MyAccountViewModel

@{
    ViewBag.Title = "Hesabım";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                My Account Page
            </header>
            <div class="panel-body">
                <form asp-controller="Account" asp-action="MyAccount" method="post" role="form" class="form-horizontal tasi-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group has-success">
                        <input type="hidden" asp-for="UserName" value="@Model.UserName" />
                        <label asp-for="UserName" class="col-lg-2 control-label">Username:</label>
                        <div class="col-lg-10">
                            <input disabled required asp-for="UserName" type="text" placeholder="Username" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <input type="hidden" asp-for="Email" value="@Model.Email" />
                        <label asp-for="Email" class="col-lg-2 control-label">Email:</label>
                        <div class="col-lg-10">
                            <input disabled required asp-for="Email" type="text" placeholder="Email" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="CurrentPassword" class="col-lg-2 control-label">Current Password:</label>
                        <div class="col-lg-10">
                            <input required asp-for="CurrentPassword" type="password" placeholder="Current Password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="NewPassword" class="col-lg-2 control-label">New Password:</label>
                        <div class="col-lg-10">
                            <input required asp-for="NewPassword" type="password" placeholder="New Password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="ConfirmPassword" class="col-lg-2 control-label">Confirm Password:</label>
                        <div class="col-lg-10">
                            <input required asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
@section Scripts {
    <script src="~/js/file-input.js"></script>
    <script type="text/javascript">
        function textClear(textName) {
            event.preventDefault();
            $('#' + textName).val('');
        };
    </script>
    <script>
        $(document).ready(function () {
            $('#Phone').usPhoneFormat();
        });
    </script>
    <script src="~/js/phone-number-validator.js"></script>
}