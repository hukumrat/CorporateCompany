@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CorporateCompany.Areas.Admin.Models.Slide

@{
    ViewBag.Title = "Update Slide";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Update Slide
            </header>
            <div class="panel-body">
                <form asp-area="Admin" asp-controller="Slide" asp-action="Update" method="post" role="form" class="form-horizontal tasi-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" value="@Model.Id"/>
					<div class="form-group has-success">
                    	<label asp-for="Header" class="col-lg-2 control-label">Header:</label>
                    	<div class="col-lg-10">
                    		<input asp-for="Header" type="text" placeholder="Header" class="form-control">
                    	</div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <script src="~/js/file-input.js"></script>
    <script type="text/javascript">
        function textClear(textName) {
            event.preventDefault();
            $('#' + textName).val('');
        };
    </script>
}