@model CorporateCompany.Areas.Admin.ViewModels.ServiceAddViewModel;

@{
    ViewBag.Title = "Update Service";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Add Service
            </header>
            <div class="panel-body">
                <form asp-area="Admin" asp-controller="Services" asp-action="Update" enctype="multipart/form-data" method="post" role="form" class="form-horizontal tasi-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" value="@Model.Id"/>

                    <div class="form-group has-success">
                        <label asp-for="Name" class="col-lg-2 control-label">Name:</label>
                        <div class="col-lg-10">
                            <input asp-for="Name" type="text" placeholder="Name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="ShortDescription" class="col-lg-2 control-label">Short Description:</label>
                        <div class="col-lg-10">
                            <input required asp-for="ShortDescription" type="text" placeholder="Short Description" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="Description" class="col-lg-2 control-label">Description:</label>
                        <div class="col-lg-10">
                            <textarea asp-for="Description" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <script src="~/js/file-input.js"></script>
}