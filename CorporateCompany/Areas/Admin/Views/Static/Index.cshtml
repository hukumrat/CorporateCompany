@model CorporateCompany.Areas.Admin.ViewModels.StaticViewModel

@{
    ViewBag.Title = "Static Contents";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Static Contents Page
            </header>
            <div class="panel-body">
                <form asp-area="Admin" asp-controller="Static" asp-action="Index" method="post" role="form" class="form-horizontal tasi-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" value="@Model.Id"/>
                    <div class="form-group has-success">
                        <label asp-for="Facebook" class="col-lg-2 control-label">Facebook Address:</label>
                        <div class="col-lg-10">
                            <input asp-for="Facebook" type="text" placeholder="Facebook Address" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="Twitter" class="col-lg-2 control-label">Twitter Address:</label>
                        <div class="col-lg-10">
                            <input asp-for="Twitter" type="text" placeholder="Twitter Address" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="Instagram" class="col-lg-2 control-label">Instagram Address:</label>
                        <div class="col-lg-10">
                            <input asp-for="Instagram" type="text" placeholder="Instagram Address" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="LinkedIn" class="col-lg-2 control-label">LinkedIn Address:</label>
                        <div class="col-lg-10">
                            <input asp-for="LinkedIn" type="text" placeholder="LinkedIn Address" class="form-control">
                        </div>
                    </div>
                    
                    <div class="form-group has-success">
                        <label asp-for="Address" class="col-lg-2 control-label">Address:</label>
                        <div class="col-lg-10">
                            <input asp-for="Address" type="text" placeholder="Address" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="AboutUsSummary" class="col-lg-2 control-label">About Us Summary:</label>
                        <div class="col-lg-10">
                            <input asp-for="AboutUsSummary" type="text" placeholder="About Us Summary" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="Email" class="col-lg-2 control-label">Email:</label>
                        <div class="col-lg-10">
                            <input asp-for="Email" type="text" placeholder="Email" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="Phone" class="col-lg-2 control-label">Phone:</label>
                        <div class="col-lg-10">
                            <input asp-for="Phone" type="text" placeholder="Phone" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
@section Scripts {
    <script src="~/js/file-input.js"></script>
    <script type="text/javascript">
        function textClear(textName) {
            event.preventDefault();
            $('#' + textName).val('');
        };
    </script>
    <script>
        $(document).ready(function () {
            $('#Phone').usPhoneFormat();
        });
    </script>
    <script src="~/js/phone-number-validator.js"></script>
}