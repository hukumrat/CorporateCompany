@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using CorporateCompany.Areas.Admin.Models
@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">

    <link rel="shortcut icon" href="http://thevectorlab.net/flatlab/img/favicon.png">

    <title>@ViewData["Title"] - Corporate Company</title>

    <!-- Bootstrap core CSS -->
    <link href="~/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link href="~/admin/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen"/>
    <link rel="stylesheet" href="~/admin/css/owl.carousel.css" type="text/css">

    <!--right slidebar-->
    <link href="~/admin/css/slidebars.css" rel="stylesheet">

    <!-- Custom styles for this template -->

    <link href="~/admin/css/style.css" rel="stylesheet">
    <link href="~/admin/css/style-responsive.css" rel="stylesheet"/>
    <link href="~/lib/izitoast/css/iziToast.css" rel="stylesheet"/>


    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
        <script src="~/admin/js/html5shiv.js"></script>
        <script src="~/admin/js/respond.min.js"></script>
    <![endif]-->
</head>

<body>
<section id="container">
<!--header start-->
<header class="header white-bg">
    <div class="sidebar-toggle-box">
        <i class="fa fa-bars"></i>
    </div>
    <!--logo start-->
    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="logo">ProjeIT<span></span></a>
    <!--logo end-->
    <div class="top-nav ">
        <!--search & user info start-->
        <ul class="nav pull-right top-menu">
            <li>
                <input type="text" class="form-control search" placeholder="Search">
            </li>
            <!-- user login dropdown start-->
            <li class="dropdown">
                <a data-toggle="dropdown" class="dropdown-toggle" href="index.html#">
                    <img alt="" src="~/admin/img/avatar1_small.jpg">
                    <span class="username">@User.Identity.Name</span>
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu extended logout">
                    <div class="log-arrow-up"></div>
                    <li>
                        <a asp-controller="Account" asp-action="MyAccount"><i class=" fa fa-user"></i>Profile</a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="SignOut"><i class="fa fa-right-from-bracket"></i> Log Out</a>
                    </li>
                </ul>
            </li>
            <!-- user login dropdown end -->
        </ul>
        <!--search & user info end-->
    </div>
</header>
<!--header end-->
<!--sidebar start-->

<aside>
    <div id="sidebar" class="nav-collapse ">
        <!-- sidebar menu start-->
        <ul class="sidebar-menu" id="nav-accordion">
            <li>
                <a class="active" asp-area="Admin" asp-controller="Projects" asp-action="Index">
                    <i class="fa fa-dashboard"></i>
                    <span>Projects</span>
                </a>
            </li>
            <li>
                <a class="active" asp-area="Admin" asp-controller="Services" asp-action="Index">
                    <i class="fa fa-sitemap"></i>
                    <span>Services</span>
                </a>
            </li>
            <li>
                <a class="active" asp-area="Admin" asp-controller="References" asp-action="Index">
                    <i class="fa fa-dashboard"></i>
                    <span>References</span>
                </a>
            </li>
            <li>
                <a class="active" asp-area="Admin" asp-controller="Message" asp-action="Index">
                    <i class="fa fa-sitemap"></i>
                    <span>Messages</span>
                </a>
            </li>
            <li>
                <a class="active" asp-area="Admin" asp-controller="Applications" asp-action="Index">
                    <i class="fa fa-dashboard"></i>
                    <span>Job Applications</span>
                </a>
            </li>
            
            <li class="sub-menu">
                <a href="javascript:;">
                    <i class="fa fa-sitemap"></i>
                    <span>Contents</span>
                </a>
                <ul class="sub">
                    <li class="sub-menu">
                        <a asp-area="Admin" asp-controller="AboutUs" asp-route-id="3" asp-action="Index">About Us</a>
                    </li>
                    <li class="sub-menu">
                        <a asp-area="Admin" asp-controller="Contact" asp-route-id="4" asp-action="Index">Contact</a>
                    </li>
                    <li class="sub-menu">
                        <a asp-area="Admin" asp-controller="Policies" asp-route-id="5" asp-action="Index">Policies</a>
                    </li>
                    <li class="sub-menu">
                        <a asp-area="Admin" asp-controller="MissionVision" asp-route-id="6" asp-action="Index">Mission & Vision</a>
                    </li>
                </ul>
            </li>
            <li class="sub-menu">
                <a href="javascript:;">
                    <i class="fa fa-dashboard"></i>
                    <span>Static Contents</span>
                </a>
                <ul class="sub">
                    <li class="sub-menu">
                        <a asp-area="Admin" asp-controller="Static" asp-action="Index">Company Info</a>
                    </li>
                    <li class="sub-menu">
                        <a asp-area="Admin" asp-controller="Slide" asp-action="Index">Slides</a>
                    </li>
                </ul>
            </li>
            <li class="sub-menu">
                <a href="javascript:;">
                    <i class="fa fa-sitemap"></i>
                    <span>Account</span>
                </a>
                <ul class="sub">
                    <li class="sub-menu">
                        <a asp-controller="Account" asp-action="ListUsers">List Users</a>
                    </li>
                    <li class="sub-menu">
                        <a asp-controller="Account" asp-action="AddUser">Add User</a>
                    </li>
                    <li class="sub-menu">
                        <a asp-controller="Account" asp-action="ChangePassword">Change Password</a>
                    </li>
                    <li class="sub-menu">
                        <a asp-controller="Account" asp-action="MyAccount">My Account</a>
                    </li>
                    <li class="sub-menu">
                        <a asp-controller="Account" asp-action="SignOut">Sign Out</a>
                    </li>
                </ul>
            </li>
        </ul>
        <!-- sidebar menu end-->
    </div>
</aside>
<!--sidebar end-->
<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        @RenderBody()
    </section>

</section>
<!--main content end-->
<!--footer start-->
<footer class="site-footer">
    <div class="text-center">
        &copy; 2022 - ProjeIT Pre Project
        <a href="index.html#" class="go-top">
            <i class="fa fa-angle-up"></i>
        </a>
    </div>
</footer>
<!--footer end-->
</section>
<!-- js placed at the end of the document so the pages load faster -->
<script src="~/admin/js/jquery.js"></script>
<script src="~/admin/js/bootstrap.min.js"></script>
<script class="include" type="text/javascript" src="~/admin/js/jquery.dcjqaccordion.2.7.js"></script>
<script src="~/admin/js/jquery.scrollTo.min.js"></script>
<script src="~/admin/js/jquery.nicescroll.js" type="text/javascript"></script>
<script src="~/admin/js/jquery.sparkline.js" type="text/javascript"></script>
<script src="~/admin/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
<script src="~/admin/js/owl.carousel.js"></script>
<script src="~/admin/js/jquery.customSelect.min.js"></script>
<script src="~/admin/js/respond.min.js"></script>

<!--right slidebar-->
<script src="~/admin/js/slidebars.min.js"></script>

<!--common script for all pages-->
<script src="~/admin/js/common-scripts.js"></script>

<!--script for this page-->
<script src="~/admin/js/sparkline-chart.js"></script>
<script src="~/admin/js/easy-pie-chart.js"></script>
<script src="~/admin/js/count.js"></script>
<script src="~/lib/izitoast/js/iziToast.js"></script>
@await RenderSectionAsync("Scripts", required: false)

<script>

        //owl carousel

        $(document).ready(function() {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true,
                autoPlay: true

            });
        });

        //custom select box

        $(function() {
            $('select.styled').customSelect();
        });

        $(window).on("resize", function() {
            var owl = $("#owl-demo").data("owlCarousel");
            owl.reinit();
        });

    </script>

</body>
</html>
@if (TempData["Message"] != null)
{
    @switch (TempData["Type"])
    {
        case "success":
            <script type="text/javascript">
                window.onload = function() {
                    iziToast.success({
                        title: '@TempData["Header"]',
                        message: '@TempData["Message"]'
                    });
                };
            </script>
            break;
        case "warning":
            <script type="text/javascript">
                window.onload = function() {
                    iziToast.warning({
                        title: '@TempData["Header"]',
                        message: '@TempData["Message"]'
                    });
                };
            </script>
            break;
        case "error":
            <script type="text/javascript">
                window.onload = function() {
                    iziToast.error({
                        title: '@TempData["Header"]',
                        message: '@TempData["Message"]'
                    });
                };
            </script>
            break;
        case "info":
            <script type="text/javascript">
                window.onload = function() {
                    iziToast.info({
                        title: '@TempData["Header"]',
                        message: '@TempData["Message"]'
                    });
                };
            </script>
            break;
    }
}