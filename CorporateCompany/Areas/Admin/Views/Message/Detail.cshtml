@model CorporateCompany.Areas.Admin.Models.Message

@{
    ViewBag.Title = "Message Detail";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Message Detail
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group has-success">
                        <label asp-for="Name" class="col-lg-2 control-label">Name:</label>
                        <div class="col-lg-10">
                            <label style="height: auto; word-wrap: normal; word-break: break-all;" class="form-control"> @Model.Name </label>
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="Surname" class="col-lg-2 control-label">Surname:</label>
                        <div class="col-lg-10">
                            <label style="height: auto; word-wrap: normal; word-break: break-all;" class="form-control"> @Model.Surname </label>
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="Email" class="col-lg-2 control-label">Email:</label>
                        <div class="col-lg-10">
                            <label style="height: auto; word-wrap: normal; word-break: break-all;" class="form-control"> @Model.Email </label>
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="Messages" class="col-lg-2 control-label">Description:</label>
                        <div class="col-lg-10">
                            <label style="height: auto; word-wrap: normal; word-break: break-all;" class="form-control"> @Model.Messages </label>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>